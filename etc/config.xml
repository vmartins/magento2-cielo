<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <cielo>
              <model>CieloFacade</model>
              <title>Catão de Crédito</title>
              <debug>1</debug>
              <debugReplaceKeys>cc_number</debugReplaceKeys>
              <active>1</active>
              <order_status>pending_payment</order_status>
              <payment_action>authorize</payment_action>
              <force_capture>false</force_capture>
              <can_authorize>1</can_authorize>
              <can_capture>1</can_capture>
              <can_void>1</can_void>
              <can_use_checkout>1</can_use_checkout>
              <can_use_internal>1</can_use_internal>
              <is_gateway>1</is_gateway>
              <sort_order>1</sort_order>
              <paymentInfoKeys>cc_type,cc_number,Status,Codigo de Retorno,Messagem de Retorno,Parcelas,Tid,Id de Pagamento,Titular do Cartão,Numero do Cartão,Bandeira,Modo,Codigo de Autorizacao,Total Capturado</paymentInfoKeys>
              <privateInfoKeys>cc_type,cc_number,Codigo de Retorno,Messagem de Retorno,Tid,Modo,Codigo de Autorizacao,Total Capturado,Codigo de Autorizacao,Total Capturado</privateInfoKeys>
            </cielo>
        </payment>
    </default>
</config>
